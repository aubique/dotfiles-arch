# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
#        color_good = "#ebdbb2"
#        color_good = "#2AA198"
#        color_bad = "#586E75"
#        color_degraded = "#DC322F"
}

order += "net_rate"
order += "pomodoro"
order += "cpu_usage"
# order += "load"
order += "disk /"
# order += "disk /home"
order += "wireless _first_"
# order += "ethernet _first_"
# order += "ipv6"
order += "battery all"
order += "keyboard_layout"
order += "tztime local"

# py3status modules
# define keyboard layouts that can be switched between
keyboard_layout {
	format = " {layout} "
	cache_timeout = 15
        layouts = ['us', 'ru']
#	color_us = "#ebdbb2"
}

# define format for net_rate py3status module
net_rate {
	interfaces = "wlp1s0"
	cache_timeout = 5
	format_no_connection = " ⇓ dl_rate KiB/S "
	format = " ⇓{down} "
	unit = "KiB/S"
	format_value = "[\?min_length=4 {value:.1f} {unit}]"
}

# pomodoro module
pomodoro {
	format = "{mmss}"
	format_active = "{format}"
	format_break = "B{breakno} {format}"
	format_break_stopped = "B{breakno} {format}"
	format_stopped = "{format}"
}

# i3status modules
cpu_usage {
        format = "  %usage "
}

load {
        format = "  %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " ⛁ %avail "
}

wireless _first_ {
	format_up = " %essid:%quality "
	#format_up = ":wifi: on"
	format_down = " no wifi "
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        format_down = " no lan "
}

ipv6 {
	format_up = " %ip "
	format_down = " no ipv6 "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = ""
        # status_bat = "bat"
        # status_bat = "☉"
        status_bat = ""
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        # status_full = "☻"
        status_full = "⚡"
        low_threshold = 15
        threshold_type = time
}

tztime local {
	format = "   %Y/%m %a %d   %H:%M"
#	format = "  %y|%m|%d  CEST %Hh%M"
}
